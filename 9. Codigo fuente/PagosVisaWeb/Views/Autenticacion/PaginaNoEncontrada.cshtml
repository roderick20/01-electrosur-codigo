@{ ViewData["Title"] = "Página no encontrada";
                Layout = "~/Views/Shared/_Layout_login.cshtml"; }

<div class="account-pages mt-5 mb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="text-center w-75 m-auto">
                            @if (ViewBag.Mensaje != null)
                            {
                        <h4 class="text-dark-50 text-center mt-0 font-weight-bold" style="margin-bottom: 20px;">@ViewBag.Mensaje</h4> }
                                    else
                                    {
                        <h4 class="text-dark-50 text-center mt-0 font-weight-bold" style="margin-bottom: 20px;">Página no encontrada</h4>}

                        </div>
                        <p class="text-muted"><a href="/" class="text-muted ml-1 btn btn-primary text-white btn-sm"><b>Inicio</b></a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
