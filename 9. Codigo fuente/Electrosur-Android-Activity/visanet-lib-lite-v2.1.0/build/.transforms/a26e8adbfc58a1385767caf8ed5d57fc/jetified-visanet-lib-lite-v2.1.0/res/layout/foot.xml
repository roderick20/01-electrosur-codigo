<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:shrinkColumns="*"
    android:stretchColumns="*">

    <TableRow
        android:id="@+id/row_multimarca_on"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/visanet_20"
        android:layout_marginTop="@dimen/visanet_3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/visanet_50"
            android:layout_weight="4"
            android:contentDescription="@string/logo"
            android:scaleType="centerInside"
            android:src="@drawable/visanet_logo_pci" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/visanet_50"
            android:layout_weight="2"
            android:contentDescription="@string/logo"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/logo2_visa" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/visanet_50"
            android:layout_weight="2"
            android:contentDescription="@string/logo"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/logo2_mastercard" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/visanet_50"
            android:layout_weight="2"
            android:contentDescription="@string/logo"
            android:padding="@dimen/visanet_5"
            android:scaleType="centerInside"
            android:src="@drawable/logo2_dinners" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/visanet_50"
            android:layout_weight="2"
            android:contentDescription="@string/logo"
            android:scaleType="centerInside"
            android:src="@drawable/logo2_amex" />

    </TableRow>
    <TableRow
        android:id="@+id/row_multimarca_off"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/visanet_20"
        android:layout_marginTop="@dimen/visanet_3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/visanet_50"
            android:layout_weight="1"
            android:contentDescription="@string/logo"
            android:scaleType="fitStart"
            android:src="@drawable/visanet_logo_pci" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/visanet_50"
            android:layout_weight="1"
            android:padding="@dimen/visanet_10"
            android:contentDescription="@string/logo"
            android:scaleType="fitEnd"
            android:src="@drawable/visanet_logo_visa" />

    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_marginBottom="@dimen/visanet_20"
        android:layout_marginTop="@dimen/visanet_3">


        <TextView
            android:id="@+id/textView2"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="v2.1.0" />

    </TableRow>


</TableLayout>



